
<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2.0dip"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="2.0dip"
    app:cardUseCompatPadding="true">

    <com.l.onboarding.RippleView
        android:id="@id/drop_menu_view_ripple"
        android:layout_width="120.0dip"
        android:layout_height="fill_parent"
        android:layout_gravity="top|right|center"
        android:translationX="32.0dip"
        android:translationY="-12.0dip"
        app:enable_stroke_style="false"
        app:ripple_color="@color/material_listonic_color_accent"
        app:ripple_count="4"
        app:ripple_duration="3000"
        app:ripple_maximum_radius="65.0dip" />

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/backgroundWrapper"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_selector"
        android:minHeight="96.0dip"
        android:paddingLeft="16.0dip"
        android:paddingTop="8.0dip"
        android:paddingRight="16.0dip"
        android:paddingBottom="8.0dip">

        <android.support.v7.widget.Toolbar
            android:id="@+id/card_toolbar"
            android:layout_width="42.0dip"
            android:layout_height="56.0dip"
            android:layout_gravity="right"
            android:gravity="right"
            app:layout_constraintBottom_toBottomOf="@+id/List_list_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/List_list_name"
            app:theme="@style/CardToolbar" />

        <TextView
            android:id="@+id/List_product_count"
            android:layout_width="wrap_content"
            android:layout_height="0.0dip"
            android:layout_marginTop="8.0dip"
            android:layout_marginRight="24.0dip"
            android:layout_marginBottom="8.0dip"
            android:gravity="center_vertical"
            android:textAppearance="@style/adapter_list_counter_style"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@id/List_list_name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/List_list_name" />

        <TextView
            android:id="@+id/List_list_name"
            android:text="My shopping"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:ellipsize="end"
            android:gravity="left|center"
            android:imeOptions="actionDone"
            android:maxLength="500"
            android:minHeight="48dp"
            android:paddingLeft="0.0dip"
            android:paddingTop="4.0dip"
            android:paddingRight="0.0dip"
            android:paddingBottom="4.0dip"
            android:textAppearance="@style/adapter_list_list_name_style"
            android:textColor="@color/material_listonic_color_text"
            android:textColorHint="#ff808080"
            app:layout_constraintEnd_toStartOf="@id/List_product_count"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/List_list_name_edit"
            android:layout_width="0.0dip"
            android:layout_height="0.0dip"
            android:layout_marginLeft="0.0dip"
            android:layout_marginRight="8.0dip"
            android:gravity="center_vertical"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLength="500"
            android:minHeight="48dp"
            android:padding="4.0dip"
            android:paddingLeft="0.0dip"
            android:textAppearance="@style/adapter_list_list_name_style"
            android:textColor="@color/material_listonic_color_text"
            android:textColorHint="#ff808080"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/List_list_name"
            app:layout_constraintEnd_toEndOf="@id/List_list_name"
            app:layout_constraintStart_toStartOf="@id/List_list_name"
            app:layout_constraintTop_toTopOf="@id/List_list_name" />

        <TextView
            android:id="@+id/recipeAdressTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:textColor="?colorPrimary"
            android:textSize="11.0sp"
            app:layout_constraintStart_toStartOf="@id/include"
            app:layout_constraintTop_toBottomOf="@id/List_list_name" />

        <com.l.customViews.ShareInfoTextViewV2
            android:id="@id/List_list_privacy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4.0dip"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:padding="0.0dip"
            android:singleLine="true"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#ffaeaeae"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressBar" />

        <TextView
            android:id="@+id/newItemsCountTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8.0dip"
            android:paddingTop="4.0dip"
            android:textAppearance="@style/adapter_list_new_items_counter_style"
            android:textColor="?colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/List_list_privacy" />

        <com.listonic.material.widget.ProgressView
            android:id="@id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="2.0dip"
            android:layout_marginTop="8.0dip"
            app:layout_constraintTop_toBottomOf="@id/recipeAdressTV"
            app:pv_autostart="false"
            app:pv_circular="false"
            app:pv_progressMode="determinate"
            app:pv_progressStyle="@style/ProgresOnListAdapter" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>